<Module>
    <ModulePrefs title="Jive API Explorer"
                author="Jive Software"
           description="Explore and exercise Jive APIs">
        <Link rel="Icon" href="jive-desktop-icon-48-glossy.ico"/>
        <Link rel="MediumIcon" href="jive-desktop-icon-48-glossy.png"/>
        <Require feature="content-rewrite">
            <Param name="include-url">*.gif</Param>
            <Param name="include-uri">*.png</Param>
        </Require>
        <Require feature="dynamic-height"/>
        <Require feature="minimessage"/>
        <Require feature="osapi"/>
        <Require feature="views"/>
    </ModulePrefs>
    <Content view="home" type="html" href="home.html" preferred_height="400"/>
    <Content view="canvas" type="html" href="canvas.html" preferred_height="800"/>
</Module>
